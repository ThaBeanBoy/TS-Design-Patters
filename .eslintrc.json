{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 15,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "@stylistic/js", "prettier"],
  "rules": {
    "@stylistic/js/indent": ["error", 2],
    "linebreak-style": 0,
    "no-unused-vars": "warn",
    "prettier/prettier": "warn"
  }
}
